{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "..",
    "checkJs": false,
    "module": "node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "target": "ESNext",
    "strictNullChecks": false,
    "strictBindCallApply": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["**/*.spec.js", "**/*.ts", "index.d.ts"]
}